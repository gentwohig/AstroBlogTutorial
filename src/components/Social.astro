---
const platforms = [
    { name: "GitHub", url: "https://github.com/withastro" },
    { name: "Twitter", url: "https://twitter.com/withastro" },
    { name: "LinkedIn", url: "https://linkedin.com/in/withastro" }
];
---

<style>
    .social {
        margin: 20px 0;
        padding: 10px;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .social h2 {
        margin: 0 0 10px;
        color: #333;
    }
    .social ul {
        list-style-type: none;
        padding: 0;
    }
    .social li {
        margin: 5px 0;
    }
    .social a {
        text-decoration: none;
        color: #007bff;
    }
    .social a:hover {
        text-decoration: underline;
    }
</style>

<div class="social">
    <h2>Follow Me</h2>
    <ul>
        {platforms.map(platform => (
            <li><a href={platform.url}>{platform.name}</a></li>
        ))}
    </ul>
</div>
